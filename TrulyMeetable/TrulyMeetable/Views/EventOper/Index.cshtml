@model IEnumerable<TrulyMeetable.Event>

@{
    ViewBag.Title = "Event Register";
}
<center><h2 style="color: #066290">Events Wall</h2></center>

<style>
    body {
        background-color: #64F325;
    }
    .card {
        box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
        transition: 0.3s;
        width: 80%;
        background-color: #E7B53A;
        color: #EF2F7A;
    }
        .card:hover {
            box-shadow: 0 8px 16px 0 rgba(0,0,0,0.2);
        }

    .container {
        padding: 2px 16px;
    }
</style>

<h4 >
    @Html.ActionLink("Create Your Event Here!", "Create")
</h4>
@foreach (var item in Model)
{
    <div class="card">
        <br />
        <img src="~/Images/events.jpg" alt="Events" style="width:20%">
        <div class="container">
            <h4>
                @Html.DisplayFor(modelItem => item.EventName)<br />
            </h4>
        </div>
        <h5>
        @Html.DisplayFor(modelItem => item.DateTime)<br />
        </h5>
        @Html.DisplayFor(modelItem => item.Location)<br />
        @Html.DisplayFor(modelItem => item.Description)<br />
        @Html.DisplayFor(modelItem => item.Contacts)<br />
        <h4>
            @Html.DisplayFor(modelItem => item.Topic)<br />
        </h4>

        <br />
        @Html.ActionLink("Like", "Like", new { id = item.EventId })
        @Html.DisplayFor(modelItem => item.Likes) |
        @Html.ActionLink("Edit", "Edit", new { id = item.EventId }) |
        @Html.ActionLink("Details", "Details", new { id = item.EventId }) | 
        @Html.ActionLink("Delete", "Delete", new { id = item.EventId }) | 
    </div>
    <br />
}


<div>
    @Html.ActionLink("Back to Home", "Index", "Home")
</div>




